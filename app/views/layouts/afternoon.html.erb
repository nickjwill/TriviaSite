<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <meta name="keywords" content="<%= @seo_keywords %>" />

    <%= stylesheet_link_tag    'afternoons', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render 'shared/afternoon_nav' %>


    <%= render 'shared/afternoon_masthead' %>


    <div class="container">

      <div class="row">

        <%= yield %>
    
        <%= render 'shared/afternoon_sidebar' %>


      </div>


        <%= source_helper("afternoon") %>


    </div>
    <%= render 'shared/afternoon_footer' %>
  </body>
</html>
